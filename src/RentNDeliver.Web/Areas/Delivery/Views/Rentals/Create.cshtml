@using Microsoft.AspNetCore.Mvc.TagHelpers
@model RentNDeliver.Web.Areas.Delivery.Models.Rentals.CreateMotorcycleRental
@{
    ViewData["Title"] = "New Rental";
}
<!--begin::Content-->
<div id="kt_app_content" class="app-content flex-column-fluid">
    <!--begin::Toolbar-->
    <div id="kt_app_toolbar" class="app-toolbar py-3 py-lg-6">
        <!--begin::Toolbar container-->
        <div id="kt_app_toolbar_container" class="app-container container-xxl d-flex flex-stack">
            <!--begin::Page title-->
            <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3">
                <!--begin::Title-->
                <h1 class="page-heading d-flex text-gray-900 fw-bold fs-3 flex-column justify-content-center my-0">Add Motorcycle</h1>
                <!--end::Title-->
                <!--begin::Breadcrumb-->
                <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
                    <!--begin::Item-->
                    <li class="breadcrumb-item text-muted">
                        <a asp-area="Delivery" asp-controller="Home" asp-action="Index" class="text-muted text-hover-primary">Home</a>
                    </li>
                    <!--end::Item-->
                    <!--begin::Item-->
                    <li class="breadcrumb-item">
                        <span class="bullet bg-gray-500 w-5px h-2px"></span>
                    </li>
                    <!--end::Item-->
                    <!--begin::Item-->
                    <a asp-area="Delivery" asp-controller="Rentals" asp-action="Index" class="breadcrumb-item text-muted">My Rentals</a>
                    <!--end::Item-->
                    <!--begin::Item-->
                    <li class="breadcrumb-item">
                        <span class="bullet bg-gray-500 w-5px h-2px"></span>
                    </li>
                    <!--end::Item-->
                    <!--begin::Item-->
                    <a asp-area="Delivery" asp-controller="Rentals" asp-action="Create" class="breadcrumb-item text-muted">New Rental</a>
                    <!--end::Item-->
                </ul>
                <!--end::Breadcrumb-->
            </div>
            <!--end::Page title-->
        </div>
        <!--end::Toolbar container-->
    </div>
    <!--end::Toolbar-->
    <!--begin::Content container-->
    <div id="kt_app_content_container" class="app-container container-xxl">
        <form asp-controller="Rentals" asp-action="Create" method="post" class="form d-flex flex-column flex-lg-row">
            <div asp-validation-summary="ModelOnly"></div>
            <!--begin::Main column-->
            <div class="d-flex flex-column flex-row-fluid gap-7 gap-lg-10">
                <!--begin::General options-->
                <div class="card card-flush py-4">
                    <!--begin::Card body-->
                    <div class="card-body pt-0">
                        <!--begin::Input group-->
                        <div class="mb-10 fv-row">
                            <!--begin::Label-->
                            <label class="required form-label">Rental Plan</label>
                            <!--end::Label-->
                            <!--begin::Input-->
                            <div class="form-group">
                                @Html.DropDownListFor(x => x.RentalPlanId, (IEnumerable<SelectListItem>)ViewBag.RentalPlanList, "Select your plan", new { @class="form-select"})
                                <span asp-validation-for="RentalPlanId" class="text-danger"></span>
                            </div>
                            <!--end::Input-->
                        </div>
                        <!--end::Input group-->
                        <!--begin::Input group-->
                        <div class="mb-10 fv-row">
                            <!--begin::Label-->
                            <label class="required form-label">Motorcycle</label>
                            <!--end::Label-->
                            <div class="form-group">
                                @Html.DropDownListFor(x => x.MotorcycleId, (IEnumerable<SelectListItem>)ViewBag.MotorcycleList, "Select motorcycle", new { @class="form-select"})
                                <span asp-validation-for="MotorcycleId" class="text-danger"></span>
                            </div>
                        </div>
                        <!--end::Input group-->
                        <!--begin::Input group-->
                        <div class="mb-10 fv-row">
                            <!--begin::Label-->
                            <label asp-for="ExpectedReturnDate" class="required form-label"></label>
                            <!--end::Label-->
                            <div class="form-group">
                                <input asp-for="ExpectedReturnDate" class="form-control"/>
                                <span asp-validation-for="ExpectedReturnDate" class="text-danger"></span>
                            </div>
                        </div>
                        <!--end::Input group-->
                    </div>
                    <!--end::Card header-->
                </div>
                <!--end::General options-->
                <div class="d-flex justify-content-end">
                    <!--begin::Button-->
                    <a asp-action="Index" class="btn btn-light me-5">Cancel</a>
                    <!--end::Button-->
                    <!--begin::Button-->
                    <button type="submit" class="btn btn-primary">
                        <span class="indicator-label">Save Changes</span>
                        <span class="indicator-progress">Please wait...
                            <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                        </span>
                    </button>
                    <!--end::Button-->
                </div>
            </div>
            <!--end::Main column-->
        </form>
    </div>
    <!--end::Content container-->
</div>
<!--end::Content-->