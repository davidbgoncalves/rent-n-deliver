@{
	// Master layout
	Layout = "~/Views/Layout/Master.cshtml";

	// Layout options
	KTTheme.AddHtmlAttribute("body", "data-kt-app-layout", "dark-header");
    KTTheme.AddHtmlAttribute("body", "data-kt-app-header-fixed", "true");
    KTTheme.AddHtmlAttribute("body", "data-kt-app-toolbar-enabled", "true");
    KTTheme.AddHtmlClass("body", "app-default");

	// Global vendors and javascript files
	KTTheme.AddVendor("datatables");
	KTTheme.AddJavascriptFile("js/widgets.bundle.js");
}

<!--begin::Root-->
<div class="d-flex flex-column flex-root app-root" id="kt_app_root">
	<!--begin::Page-->
	<div class="app-page flex-column flex-column-fluid" id="kt_app_page">
		<partial name="Partials/HeaderLayout/_Header.cshtml" />
		<!--begin::Wrapper-->
		<div class="app-wrapper flex-column flex-row-fluid" id="kt_app_wrapper">
			<!--begin::Main-->
			@RenderBody()
			<!--end:::Main-->
		</div>
		<!--end::Wrapper-->
	</div>
	<!--end::Page-->
</div>
<!--end::Root-->

<partial name="~/Views/Partials/_Drawers.cshtml" />
<partial name="~/Views/Partials/_Modals.cshtml" />
<partial name="~/Views/Partials/_Scrolltop.cshtml" />